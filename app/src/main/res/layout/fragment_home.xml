            app:layout_constraintVertical_bias="0.5">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/image1" />
        </androidx.cardview.widget.CardView>

        <TextView
